{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": false,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "alwaysStrict": true,
    "declaration": false,
    "downlevelIteration": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [ "ES5", "ES6" ],
    "module": "commonjs",
    "moduleResolution": "node",
    "newLine": "lf",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "outDir": "../test/",
    "strictNullChecks": true,
    "sourceMap": false,
    "target": "es5",
    "types": [
      "node",
      "mocha",
      "should",
      "sinon",
      "should-sinon"
    ],
    "baseUrl": ".",
    "paths": {
    }
  },
  "include": [
    "**/*.ts"
  ]
}

